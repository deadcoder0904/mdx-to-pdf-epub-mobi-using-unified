{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["react/next", "react-dom/next", "mdx", "node"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "declaration.d.ts",
    "src/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*.mdx"
  ],
  "exclude": ["node_modules", ".vscode"]
}
